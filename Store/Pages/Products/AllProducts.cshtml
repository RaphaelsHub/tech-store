@page
@model Store.Pages.Products.AllProducts

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav class="breadcrumbs">
                <ul>
                    <li>
                        <a asp-page="/Home/Index">Home</a>
                    </li>
                    <li>
                        <span>Products</span>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        @if (Model.Products.Items.Any())
        {
            foreach (var item in Model.Products.Items)
            {
                <div class="col-lg-2 col-md-4">
                    <div class="sidebar">
                        <div class="filter-block">
                            <h5>Фильтры</h5>

                            <!-- Цвет -->
                            <div class="mb-3">
                                <h6>Цвет</h6>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="red" id="red">
                                    <label class="form-check-label" for="red">
                                        Красный
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="black" id="black">
                                    <label class="form-check-label" for="black">
                                        Черный
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <partial name="_ProductCard" model="item"/>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <div class="jumbotron">
                    <h1>Products are not found!</h1>
                </div>
            </div>
        }
    </div>
</div>