@page
@model Store.Pages.Account.SignUpModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <nav class="breadcrumbs">
                <ul>
                    <li><a asp-page="/Home/Index">Home</a></li>
                    <li><span>Registration</span></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<div class="container-fluid mb-3">
    <div class="row">
        <div class="col-12">
            <div class="page-register bg-white p-3">
                <h1 class="section-title h3"><span>Registration</span></h1>
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <form method="post" class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label asp-for="RegisterInput.Name" class="form-label required"></label>
                                <input asp-for="RegisterInput.Name" class="form-control" placeholder="Name" />
                                <span asp-validation-for="RegisterInput.Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RegisterInput.Email" class="form-label required"></label>
                                <input asp-for="RegisterInput.Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RegisterInput.Number" class="form-label required"></label>
                                <input asp-for="RegisterInput.Number" class="form-control" placeholder="Phone" />
                                <span asp-validation-for="RegisterInput.Number" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="RegisterInput.Password" class="form-label required"></label>
                                <input asp-for="RegisterInput.Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
                            </div>
                            
                            <div class="mb-3">
                                <button type="submit" class="btn btn-warning">Registration</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
