@page
@model Store.Pages.Home.ErrorModel
@{
    var error = Model.Error;
}

<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="jumbotron">
                    <h1 class="display-4">Error @error.ErrorCode </h1>
                    <p class="lead">We apologize for the inconvenience, but it seems an error (@error.ErrorCode) has occurred during processing your request. Error message: @error.ErrorMessage</p>
                    <hr class="my-4">
                    <p>Please retry later or notify us.</p>
                    <p>Thank you for your understanding.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        setTimeout(function () {
            window.location.href = "/Home/Index";
        }, 30000);
    });
</script>
